<%= form_for @inquiry, :url => inquiry_done_path do |f| %>
    <div>
      <h2>メッセージ確認</h2>
      <div>
        <strong>名前</strong>
        <p>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </p>
      </div>
      <div>
        <strong>メールアドレス</strong>
        <p>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </p>
      </div>
      <div>
        <strong>内容</strong>
        <p>
          <%= f.hidden_field :content %>
          <%= simple_format(@inquiry.content) %>
        </p>
      </div>
        <%= f.submit '戻る', name: 'back' %>
        <%= f.submit '送信する' %>
    </div>
  <% end %>